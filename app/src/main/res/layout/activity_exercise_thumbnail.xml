<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fitness_theme"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Exercise_thumbnail">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/fire_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness App"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/add_gif_tnail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/etext_color"
        android:hint="Exercise Picture Url"
        />
    <EditText
        android:id="@+id/add_gif_tnail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/etext_color"
        android:hint="Exercise Name"
        />
    <Button
        android:id="@+id/add_gif_tnail_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/post_press_state"
        android:text="Next"
        />

</LinearLayout>